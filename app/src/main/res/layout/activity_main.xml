<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow>
        <EditText
            android:id="@+id/edtNum1"
            android:layout_span="5"
            android:layout_weight="1"
            android:hint="숫자입력1"/>
<!--        android:layout_span="5"-->
<!--        android:layout_weight="1"-->
<!--           span 5를 주면 화면이 넘어가기 때문에 weight 값을 1로 주어 화면을 맞춘다 -->
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/edtNum2"
            android:layout_span="5"
            android:layout_weight="1"
            android:hint="숫자입력2"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btnadd"
            android:layout_span="5"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="더하기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnsub"
            android:layout_span="5"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="빼기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnmul"
            android:layout_span="5"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="곱하기"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btndiv"
            android:layout_span="5"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="나누기"/>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tvresult"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textColor="#ff0000"
            android:text="계산결과 : "
            android:layout_span="5"
            android:layout_weight="1"/>
<!--        이 상황에서는 글자를 눌리면 0열의 길이가 늘어난다   android:layout_span="5" android:layout_weight="1"  입력해야됨-->

    </TableRow>
<!--<TableRow>  </TableRow>만 알면 된다.-->
</TableLayout>